{
  "steps": [
    {
      "name": "gcr.io/google.com/cloudsdktool/cloud-sdk",
      "args": [
        "gcloud",
        "functions",
        "deploy",
        "sendConfirmationEmail",
        "--gen2",
        "--region=us-east1",
        "--runtime=nodejs18",
        "--source=.",
        "--entry-point=sendConfirmationEmail",
        "--trigger-topic=send-confirmation-email",
        "--env-vars-file=.env.yaml"
      ],
      "secretEnv": ["DATABASE_URL", "SENDGRID_API_KEY"]
    }
  ],
  "availableSecrets": {
    "secretManager": [
      {
        "versionName": "projects/625494448696/secrets/DATABASE_URL/versions/1",
        "env": "DATABASE_URL"
      },
      {
        "versionName": "projects/625494448696/secrets/SENDGRID_API_KEY/versions/1",
        "env": "SENDGRID_API_KEY"
      }
    ]
  },
  "options": {
    "logging": "CLOUD_LOGGING_ONLY"
  }
}
