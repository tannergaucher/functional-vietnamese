{
  "steps": [
    {
      "name": "gcr.io/google.com/cloudsdktool/cloud-sdk",
      "dir": "cloud-functions/publish-conversation",
      "args": [
        "gcloud",
        "functions",
        "deploy",
        "publishConversation",
        "--gen2",
